<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="?attr/listPreferredItemHeightSmall"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:padding="12dp"
        android:scaleType="fitXY"
        android:tint="@android:color/white"
        app:tint="@android:color/white" />
    <TextView
        android:id="@+id/lblListHeader"
        android:layout_width="wrap_content"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:text=""
        android:layout_toRightOf="@id/iv_img"
        android:layout_toLeftOf="@id/fleche"
        android:fontFamily="@font/cerapro_bold"
        android:layout_toEndOf="@id/iv_img"
        android:layout_toStartOf="@id/fleche" />
    <ImageView
        android:id="@+id/fleche"
        android:layout_width="?attr/listPreferredItemHeightSmall"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:src="@drawable/ic_back"
        android:layout_alignParentEnd="true"
        android:scaleType="center"
        android:rotation="180"
        android:layout_alignParentRight="true"
         />
</RelativeLayout>