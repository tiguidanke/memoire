<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_data"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:gravity="center"
    android:padding="5dp"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cardCornerRadius="235dp"
        app:cardElevation="3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp">
        <TextView
            android:id="@+id/tv_reunion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/cerapro_bold"
            android:text="R9"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="36sp"
            android:maxLines="3"
            android:gravity="center"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:paddingRight="10dp"
            android:paddingLeft="10dp" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="25dp"
        app:cardElevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_hypo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/cerapro_regular"
                    android:text="Communication"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp" />
                <TextView
                    android:id="@+id/tv_heure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:fontFamily="@font/cerapro_regular"
                    android:text="00:00"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:paddingRight="10dp"
                    android:visibility="gone"
                    android:paddingLeft="10dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/cerapro_regular"
                android:text="Communication"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:paddingRight="10dp"
                android:paddingLeft="10dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_partant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/cerapro_regular"
                    android:text="Communication"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/cerapro_regular"
                    android:text="-"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:maxLines="3"
                    android:ellipsize="end" />
                <TextView
                    android:id="@+id/tv_mise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/cerapro_regular"
                    android:text="Communication"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>